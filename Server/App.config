<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<appSettings>
		<!-- PMSM Motor specific settings -->
		<add key="motorStoragePath" value="MotorStorage"/>
		<add key="Iq_threshold" value="1.0"/>
		<add key="Id_threshold" value="1.0"/>
		<add key="T_threshold" value="5.0"/>
		<add key="DeviationPercent" value="25"/>
	</appSettings>
	<system.serviceModel>
		<services>
			<service name="Server.MotorService">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4101"/>
					</baseAddresses>
				</host>
				<endpoint address="Motor"
						 binding="netTcpBinding"
						 bindingConfiguration="streamBinding"
						 contract="Common.IMotorService">
						<identity>
							<dns value="localhost"/>
						</identity>
				</endpoint>
			</service>
		</services>
		<bindings>
			<netTcpBinding>
				<binding name="streamBinding" transferMode="Streamed" maxReceivedMessageSize="10485760" openTimeout="00:00:10" closeTimeout="00:00:10" sendTimeout="00:00:30" receiveTimeout="00:10:00" />
			</netTcpBinding>
		</bindings>
	</system.serviceModel>
</configuration>

